{
    "name": "respinar/contao-iraniandate-bundle",
    "description": "Iranian Date for Contao",
    "keywords": ["contao", "bundle", "shamsi", "khorshidi", "solar hijri", "jalali", "persian", "iranian","date"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Hamid Peywasti",
            "email": "hamid@respinar.com",
            "homepage": "https://respinar.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/respinar/contao-iraniandate-bundle/issues",
        "source": "https://github.com/respinar/contao-iraniandate-bundle"
    },
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^5.2"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Respinar\\ContaoIranianDateBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Respinar\\ContaoIranianDateBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ templates/ tests/ --config tools/ecs/config.php --fix --ansi",
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist"
    }
}